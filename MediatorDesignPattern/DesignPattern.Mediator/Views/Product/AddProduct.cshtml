@model DesignPattern.Mediator.MediatorPattern.Commands.CreateProductCommand

@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">

    <br /><br />

<form method="post"> 
    <label>Ürün Ad</label>
    <input type="text" asp-for="ProductName" class="form-control" />
    <br />
    <label>Fiyat</label>
    <input type="text" asp-for="ProductPrice" class="form-control" />
    <br />
    <label>Stok Adet</label>
    <input type="text" asp-for="ProductStock" class="form-control" />
    <br />    
    <label>Stok Türü</label>
    <input type="text" asp-for="ProductStockType" class="form-control" />
    <br />    
    <label>Kategori</label>
    <input type="text" asp-for="ProductCategory" class="form-control" />
    <br />
    <button class="btn btn-primary">Ürünü Ekle</button>
</form>

</div>